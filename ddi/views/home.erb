<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title><%=@title%></title>

    <link rel="stylesheet" href="stylesheets/pure-min.css">
    <link rel="stylesheet" href="stylesheets/fonts.css">
    <link rel="stylesheet" href="stylesheets/book_viewer.css">
</head>

<body>

  <div id="layout">
      <a href="#menu" id="menuLink" class="menu-link">
          <span></span>
      </a>

      <div id="menu">
          <div class="pure-menu">
              <a class="pure-menu-heading" href="/">Files</a>

              <ul class="pure-menu-list">
                <% @contents.each do |file| %>
                  <li class="pure-menu-item">
                    <a href="<%=file%>" class="pure-menu-link"><%=file%></a>
                  </li>
                <%end%>
              </ul>
          </div>
      </div>

      <div id="main">
        <div class="header">
          <h1>Dynamic Diretory Index</h1>
          <h2>Code Challenge</h2>
          <h2><%params%></h2>
        </div>

        <div class="content">
          <h2 class="content-subhead">Files</h2>
          <a href="/?sort=ascending">Sort Ascending</a>
          <a href="/?sort=descending">Sort Descending</a>

          <div class="pure-menu">
            <ul class="pure-menu-list">
              <% @contents.each do |file| %>
                <li class="pure-menu-item">
                  <a href="<%=file%>" class="pure-menu-link"><%=file%></a>
                </li>
              <%end%>
            </ul>
          </div>
        </div>
      </div>
  </div>

  <script type="text/javascript" src="/javascripts/ui.js"></script>
</body>
</html>
